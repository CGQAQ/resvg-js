{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": ["config:base", ":preserveSemverRanges"],
  "timezone": "Asia/Shanghai",
  "schedule": "after 10pm on tuesday",
  "packageRules": [
    {
      "automerge": true,
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"]
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "extends": [
      "schedule:monthly"
    ]
  },
  "ignoreDeps": ["png"]
}
